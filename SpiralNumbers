#include<stdio.h>
#include<string.h>


int main(){

  int n;
  scanf("%d", &n);

  int mat[n][n];

  int c = 1;

  for(int i = 0; i < n; i++){

    for(int j = 0; j < n; j++){
  
      mat[i][j] = 0;
    }
  }

  for(int i = 0; i < n; i++){

    mat[0][i] = i+1;
    c++;
    
  }
  

  int row = 1, col = n-1;

  if(n%2 != 0){

    for(int i = n-1; i > 0; i--){
  
      if(i%2 == 0){

        for(int j = 1; j <= i; j++){

          printf("Current row : %d, current column : %d and number being put is %d\n", row, col, c);

          

          mat[row][col] = c;
          c++;

          if(j != i)
            row++;
        }
        col--;

        for(int i = 0; i < n; i++){

          for(int j = 0; j < n; j++){
  
            printf("%d, ", mat[i][j]);
          }

          printf("\n");
        }

        for(int j = 1; j <= i; j++){

          printf("Current row : %d, current column : %d and number being put is %d\n", row, col, c);

          mat[row][col] = c;
          c++;

          if(j != i)
          col--;
        }
        row--;
        for(int i = 0; i < n; i++){

          for(int j = 0; j < n; j++){

            printf("%d, ", mat[i][j]);
          }

          printf("\n");
        }
      }

      else{

        for(int j = 1; j <= i; j++){

          printf("Current row : %d, current column : %d and number being put is %d\n", row, col, c);

          mat[row][col] = c;
          c++;

          if(j!=i)
          row--;
        }
        col++;

        for(int i = 0; i < n; i++){

          for(int j = 0; j < n; j++){

            printf("%d, ", mat[i][j]);
          }

          printf("\n");
        }

        for(int j = 1; j <= i; j++){

          printf("Current row : %d, current column : %d and number being put is %d\n", row, col, c);

          mat[row][col] = c;
          c++;

          if(j!=i)
          col++;
        }
        row++;

        for(int i = 0; i < n; i++){

          for(int j = 0; j < n; j++){

            printf("%d, ", mat[i][j]);
          }

          printf("\n");
        }

        
      }

        
        
      }
